<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<LinearLayout android:layout_height="wrap_content"
		android:layout_alignParentBottom="true" android:layout_width="fill_parent"
		android:id="@+id/command_line"
		android:gravity="center_horizontal"
		>
		<Button 
			android:text="Done" android:layout_height="wrap_content"
			android:id="@+id/button_done" android:layout_width="wrap_content"></Button>
	</LinearLayout>

	<com.jhlee.vbudget.plan.RRMonthBudgetView
		android:id="@+id/month_budget_view" android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:layout_alignParentTop="true"
		android:layout_above="@id/command_line"
		/>

</RelativeLayout>
