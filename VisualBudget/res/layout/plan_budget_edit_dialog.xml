<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/global_background">
	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:orientation="vertical" android:layout_weight="1">
		<TextView android:text="1. Select a budget" android:id="@+id/TextView01"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			style="@style/Widget.TextView.GuideTitle"></TextView>

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:gravity="right">
			<Spinner android:id="@+id/spinner_budget_name"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_weight="1" />
			<Button android:id="@+id/button_new_budget_name"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="New Category" style="@style/Widget.Button.BigButton" />

		</LinearLayout>

		<TextView android:text="2. Set amount" android:id="@+id/TextView01"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			style="@style/Widget.TextView.GuideTitle" />



		<RelativeLayout android:id="@+id/RelativeLayout01"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:id="@+id/budget_amount" android:layout_width="wrap_content"
				android:layout_height="wrap_content" style="@style/Widget.TextView.BudgetInputContentText"
				android:hint="Budget amount" />
			<Button android:text="Show numpad" android:id="@+id/button_budget_amount"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				style="@style/Widget.Button.BigButton"
				android:layout_alignParentRight="true" />
		</RelativeLayout>

	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center_horizontal"
		android:orientation="horizontal" android:layout_alignParentBottom="true">
		<Button android:text="OK" android:id="@+id/button_ok"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			style="@style/Widget.Button.BigButton" android:minWidth="45sp"
			android:minHeight="45sp" />
		<Button android:text="Cancel" android:id="@+id/button_cancel"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			style="@style/Widget.Button.BigButton" android:minWidth="45sp"
			android:minHeight="45sp" />
	</LinearLayout>

</RelativeLayout>