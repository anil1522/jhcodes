<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LinearLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"

	android:orientation="vertical">
	<TextView android:text="1. Select a budget" android:id="@+id/TextView01"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal">
		<Spinner android:id="@+id/spinner_budget_name"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1" />
		<Button android:id="@+id/button_new_budget_name"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="New" />
	</LinearLayout>

	<TextView android:text="2. Set amount" android:id="@+id/TextView01"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>

	<SeekBar android:id="@+id/seekbar_amount" android:layout_width="fill_parent"
		android:layout_height="wrap_content"></SeekBar>


	<RelativeLayout android:id="@+id/RelativeLayout01"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<Button android:text="$0.0" android:id="@+id/button_budget_amount"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="1" />
	</RelativeLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<Button android:text="OK" android:id="@+id/button_ok"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="1" />
		<Button android:text="Cancel" android:id="@+id/button_cancel"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="1" />
	</LinearLayout>

</LinearLayout>

